{
  "name": "event-producer",
  "description": "Event producer",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "clean": "/bin/rm -fr dist/* reports/*",
    "start": "ntl",
    "build": "yarn build-ts",
    "serve": "node -r dotenv-safe/config dist/main.js",
    "watch-node": "nodemon dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "NODE_ENV=test yarn test --watchAll",
    "debug-test": "run-script-os",
    "debug-test:win32": "node -r dotenv-safe/config --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "debug-test:linux:darwin": "node -r dotenv-safe/config --inspect-brk node_modules/.bin/jest --runInBand",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "set NODE_ENV=development && yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "prettify": "yarn prettify-imports && yarn prettify-ts",
    "prettify-imports": "tslint -c tslint.json -p tsconfig.json --fix",
    "prettify-ts": "prettier -l --config .prettierrc --write \"**/*.{ts,js,json}\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint-prettier": "prettier --config .prettierrc --check \"**/*.{ts,js,json}\"",
    "lint-dockerfile": "docker run --rm -i hadolint/hadolint < Dockerfile"
  },
  "dependencies": {
    "@types/jest-each": "^0.3.3",
    "@types/node-cron": "^2.0.2",
    "amqplib": "^0.5.3",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.3",
    "config": "^1.31.0",
    "dotenv-safe": "^6.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-healthcheck": "^0.1.0",
    "helmet": "^3.15.0",
    "http-status-codes": "^1.3.0",
    "jest-each": "^24.0.0",
    "moment": "^2.24.0",
    "node-cron": "^2.0.3",
    "node-polyglot": "^2.3.0",
    "pg": "^7.8.0",
    "trace": "^3.1.0",
    "tslint-config-security": "^1.15.0",
    "uuid": "^3.3.2",
    "yamljs": "^0.3.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.9",
    "@types/bunyan": "^1.8.5",
    "@types/cls-hooked": "^4.2.1",
    "@types/compression": "^0.0.36",
    "@types/config": "0.0.34",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.12",
    "@types/node-polyglot": "^0.4.32",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "dts-gen": "^0.5.7",
    "eslint": "^5.12.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "nodemon": "^1.18.7",
    "ntl": "^3.0.0",
    "prettier": "^1.16.1",
    "snyk": "^1.122.3",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.4"
  }
}
